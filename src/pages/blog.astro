---
import BaseLayout from '../layouts/BaseLayout.astro'
import BlogPost from '../components/BlogPost.astro'
import Newsletter from '../components/Newsletter.astro'
import '../styles/blog.css'

const allPosts = await Astro.glob('../pages/blog/*.md')
allPosts.sort(
  (a, b) =>
    Date.parse(b.frontmatter.pubDate) - Date.parse(a.frontmatter.pubDate)
)
const pageTitle = 'StronaFirmy.pl | Blog'
---

<BaseLayout
  title={pageTitle}
  description='Blog na tematy związane z tworzeniem stron internetowych oraz tego, jak wykorzystywać stronę internetową w biznesie'
>
  <header class='headline'>
    <div class='headline-text'>
      <h1 class='main-text'>Blog</h1>
      <div class='secondary-text'>
        Blog na tematy związane z tworzeniem stron internetowych oraz tego, jak
        wykorzystywać stronę internetową w biznesie
      </div>
    </div>
  </header>
  <ul class='blog-highlight'>
    {allPosts.map((post, index) => <BlogPost post={post} index={index} />)}
  </ul>
  <Newsletter />
</BaseLayout>
